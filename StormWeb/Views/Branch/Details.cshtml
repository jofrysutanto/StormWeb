@model StormWeb.Models.Branch
@{
    ViewBag.Title = "Details";
}
<div class="row-fluid">
    <div class="span12">
         <div class="box-tab">
            <div class="page-header">
                <h1>
                    &nbsp;&nbsp;Branch Details</h1>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <br />
                    <table class="table">
                        <tr>
                            <th>
                                Branch Name
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Branch_Name)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Address
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Address.Address_Name) ,
                                @Html.DisplayFor(model => model.Address.City) <br />
                                 @Html.DisplayFor(model => model.Address.State) ,
                                  @Html.DisplayFor(model => model.Address.Zipcode) <br />
                                   @Html.DisplayFor(model => model.Address.Country.Country_Name) ,
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Primary Contact
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Primary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Secondary Contact
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Secondary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Email
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 
<p>
 @if (HttpContext.Current.User.IsInRole("BranchManager") || HttpContext.Current.User.IsInRole("Super"))
 {
     if (StormWeb.Controllers.BranchController.getBranchId() == Model.Branch_Id)
     {
        <a href="@Url.Action("Edit", "Branch", new { id = Model.Branch_Id })" class="btn btn-info"> Edit</a>
     }
 }
 @Html.Button_BackToList("Bact To List", "../../Branch")
</p>