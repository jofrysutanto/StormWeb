@using (Html.BeginForm("Delete", "Branch", FormMethod.Post))
{   
    <div class="modal hide fade" id="myModal1">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                ×</button>
            <h3>
                Delete Branch Details</h3>
        </div>
        <div class="modal-body">
            <p>
                Are you sure you want to delete this Branch ?
                <div class="alert alert-error fade in">
                    <button data-dismiss="alert" class="close" type="button">
                        ×</button>
                    <strong>Warning !</strong> Deleting the course deletes all the associated Client
                    Details , Applications , Appointments and Cases.
                    <br />
                    <br />
                </div>
            </p> 
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal" id="dismissModal">No</a>
            <input type="submit" class="btn btn-modal" id="save" type="submit" value="Yes" />
        </div>
    </div>
}
