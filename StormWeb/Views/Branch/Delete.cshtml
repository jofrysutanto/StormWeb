@model StormWeb.Models.Branch
@{
    ViewBag.Title = "Delete";
}
<h2>
    Delete</h2>
<h3>
    Are you sure you want to delete this?</h3>
<br />
@Html.ValidationSummary(false, "", new { @class = "error" })
<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h2>
                    Branch Details</h2>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <br />
                    <table class="table">
                        <tr>
                            <th>
                                Branch_Name
                            </th>
                            <td>@Html.DisplayFor(model => model.Branch_Name)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Address
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Address.Address_Name)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Primary_Contact
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Primary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Secondary_Contact
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Secondary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Email
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
