@model StormWeb.Models.StudentStaffModel

@{
    ViewBag.Title = "Details";
}

<div class="row-fluid">
    <div class="page-header">
        <h1>Student Application Documents</h1>
    </div>
</div>


<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head"><h5>List of Documents</h5></div>
            <div class="widget-content">
                <div class="widget-box">
                    <br />
                    <table class="data-tbl-boxy table">
                        <thead>
                            <tr>
                                <th> Document ID </th>
                                
                                <th> Application ID</th>
                                <th> Template Document Id</th>
                                <th>Path</th>
                                <th>Uploaded On</th>
                                <th>File Name</th>
                                <th>Uploaded By</th>
                                <th>Comment</th>
                            </tr>
                        </thead>    
                        <tbody> 
                            @if (Model == null)
                            {
                                <tr> 
                                    <td></td>  
                                    <td></td>
                                    <td>No Item To Display</td>   
                                    <td></td>
                                </tr> 
                            }
                            else
                            {
                                foreach (var item in Model.applicationDocumentTable)
                                {
                                       <tr>
                                       <td>
                                   @Html.Encode(item.ApplicationDoc_Id)
                                   </td>
                                   
                                   <td>@Html.Encode(item.Application_Id)</td>
                                   <td>@Html.Encode(item.TemplateDoc_Id)</td>
                                   <td>@Html.Encode(item.Path)</td>
                                   <td>@Html.Encode(item.UploadedOn)</td>
                                   <td>@Html.Encode(item.FileName)</td>
                                   <td>@Html.Encode(item.UploadedBy)</td>
                                   <td>@Html.Encode(item.Comment)</td>
                                   <td>@Html.ActionLink("View Documents", "Document", new {id=item.Application_Id})</td>
                                   </tr>
                                }

                            }
    

<p>
    
    @Html.ActionLink("Back to List", "Index")
</p>
</tbody>                                 

</table>
</div></div></div></div></div>