@model StormWeb.Models.StudentStaffModel

@{
    ViewBag.Title = "Details";
}

<div class="row-fluid">
    <div class="page-header">
        <h1>Student Application</h1>
    </div>
</div>


<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head"><h5>List of Applications</h5></div>
            <div class="widget-content">
                <div class="widget-box">
                    <br />
                    <table class="data-tbl-boxy table">
                        <thead>
                            <tr>
                                <th> Application ID </th>
                                <th> Case ID </th>                                
                                <th> Student ID</th>
                                <th> Application Date</th>
                                <th> Couse Id </th>
                            </tr>
                        </thead>    
                        <tbody> 
                            @if (Model == null)
                            {
                                <tr> 
                                    <td></td>  
                                    <td></td>
                                    <td>No Item To Display</td>   
                                    <td></td>
                                </tr> 
                            }
                            else
                            {
                                foreach (var item in Model.applicationTable)
                                {
                                       <tr>
                                       <td>
                                   @Html.Encode(item.Application_Id)
                                   </td>
                                   <td>@Html.Encode(item.Case_Id)</td>
                                   <td>@Html.Encode(item.Student_Id)</td>
                                   <td>@Html.Encode(item.Date_Of_ApplicationStatus)</td>
                                   <td>@Html.Encode(item.Course_Id)</td>
                                   <td>@Html.ActionLink("View Documents", "Documents", new {id=item.Application_Id})</td>
                                   </tr>
                                }

                            }
    

<p>
    
    @Html.ActionLink("Back to List", "Index")
</p>
</tbody>                                 

</table>
</div></div></div></div></div>