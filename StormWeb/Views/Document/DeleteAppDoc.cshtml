@model StormWeb.Models.Application_Document

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Application Document</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Application Document</legend>

    <div class="display-label">Path</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Path)
    </div>

    <div class="display-label">Uploaded On</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UploadedOn)
    </div>

    <div class="display-label">File Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.FileName)
    </div>

    <div class="display-label">Uploaded By</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UploadedBy)
    </div>

    <div class="display-label">Comment</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Comment)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
