@model StormWeb.Models.Associate
@{
    ViewBag.Title = "Delete";
}
<h3>
    Are you sure you want to delete this?</h3>
<br />
@Html.ValidationSummary(false, "", new { @class = "error" })
<div class="row-fluid">
    <div class="span12">
        <div class="box-tab">
            <div class="page-header">
                <h1>
                    &nbsp;&nbsp;Associate Details
                </h1>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <br />
                    <table class="table">
                        <tr>
                            <th>
                                AssociateName
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.AssociateName)
                            </td>
                        </tr>
                       <tr>
                            <th>
                                Address
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Address.Address_Name)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Contact Person
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.ContactPerson)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Primary Contact
                            </th>
                            <td>@Html.DisplayFor(model => model.Primary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Secondary Contact
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Secondary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Email
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <input type="submit" value="Delete" class="btn btn-danger  tip-top" data-toggle="modal"
        href="#myModal1" data-original-title="Delete Associate Details" />
    @Html.Button_BackToList("Bact To List", "../../Associate")
</p>
@using (Html.BeginForm("Delete", "Associate", FormMethod.Post))
{   
    <div class="modal hide fade" id="myModal1">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                ×</button>
            <h3>
                Delete Associate Details</h3>
        </div>
        <div class="modal-body">
            <p>
                Are you sure you want to delete this Associate ?
              @*  <div class="alert alert-error fade in">
                    <button data-dismiss="alert" class="close" type="button">
                        ×</button>
                     <strong>Warning !</strong> Deleting the course deletes all the associated Client
                    Details , Applications , Appointments and Cases. 
                    <br />
                    <br />
                </div>*@
            </p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal" id="dismissModal">No</a>
            <input type="submit" class="btn btn-modal" id="save" type="submit" value="Yes" />
        </div>
    </div>
}