@model StormWeb.Models.Associate
@{
    ViewBag.Title = "Details";
}
<div class="row-fluid">
    <div class="span12">
       <div class="box-tab">
            <div class="page-header">
                <h1>
                    &nbsp;&nbsp;Associate Details</h1>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <br />
                    <table class="table">
                        <tr>
                            <th>
                                Associate Name
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.AssociateName)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Address
                            </th>
                            <td>
                            </td>
                            <td>
                               @Html.DisplayFor(model => model.Address.Address_Name) ,
                                @Html.DisplayFor(model => model.Address.City) <br />
                                 @Html.DisplayFor(model => model.Address.State) ,
                                  @Html.DisplayFor(model => model.Address.Zipcode) <br />
                                   @Html.DisplayFor(model => model.Address.Country.Country_Name) ,
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Contact Person
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ContactPerson)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Primary Contact
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Primary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Secondary Contact
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Secondary_Contact)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Email
                            </th>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <a href="@Url.Action("Edit", "Associate", new { id = Model.AssociateId })" class="btn btn-info">
        Edit</a>
    @Html.Button_BackToList("Bact To List", "../../Associate")
</p>
