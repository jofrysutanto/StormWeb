@model StormWeb.Models.AdvertisementViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="row-fluid">
    <div class="span12">
        <div class="box-tab">
            <div class="page-header">
            <h1> &nbsp;&nbsp;Delete Material </h1>
            </div>
            <div class="widget-content">
                <div class="widget-box" style="padding: 15px;">

           <h3> Are you sure you want to delete this?</h3>
   @using (Html.BeginForm())
   {
    <table class="data-tbl-simple table table-bordered dataTable ">
        <tr>
            <th>
                Heading
            </th>
            <td>
                @Html.DisplayFor(model => model.adv.Heading)
            </td>
        </tr>
        <tr>
            <th>
                Author
            </th>
            <td>@Html.DisplayFor(model => model.adv_file.UploadedBy)
            </td>
        </tr>
        <tr>
            <th>
                Updated Date
            </th>
            <td>
                @Html.DisplayFor(model => model.adv_file.UploadedOn)
            </td>
