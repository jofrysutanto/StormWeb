@model IEnumerable<StormWeb.Models.Client>
@{
    ViewBag.Title = "ShowLogs";
}
<!-- JQuery UI and WIdget -->
<script src="@Url.Content("~/Scripts/jquery.widget.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/css/ui-lightness/jquery-ui-1.8.22.custom.css")" rel="stylesheet" type="text/css" />
<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Show Log</h5>
            </div>
            <div class="widget-content">
                <div class="widget-box" style="padding: 15px;">
                      <table class="data-tbl-simple table table-bordered dataTable">
                        <thead>
                            <tr>
                                <th>
                                    <i class="color-icons user_co"></i>Name
                                </th>
                                <th>
                                    <i class="color-icons book_addresses_co"></i>Contact
                                </th>
                                <th>
                                    <i class="color-icons calendar_1_co"></i>Date of Birth
                                </th>
                                <th><i class="color-icons hammer_screwdriver_co"></i>Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.Title @item.GivenName @item.LastName
                                    </td>
                                    <td>
                                        <ul>
                                            <li>
                                                <i class="color-icons mobile_phone_co"></i>@item.ContactNumber
                                            </li>
                                            <li>
                                                <i class="color-icons mobile_phone_co"></i>@item.SecondaryContactNumber
                                            </li>
                                            <li>
                                                <i class="color-icons envelope_co"></i>@item.Email
                                            </li>
                                        </ul>
                                    </td>
                                    <td>
                                        @item.Dob.ToShortDateString()
                                    </td>
                                    <td>
                                        <i class="color-icons table_co"></i><a href="@Url.Action("Student","Log", new {id=item.Students.First().Student_Id})">View Log</a>
                                    </td>
                                </tr>                
                            }
                        </tbody>
                    </table> 
                </div>
            </div>
        </div>
    </div>
