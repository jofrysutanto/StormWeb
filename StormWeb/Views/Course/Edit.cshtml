@model StormWeb.Models.Course
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        // For DatePicker
        $(".dp").datepicker({
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            changeYear: true,
            minDate: '0',
            maxDate: '+3M'
        });
    });
</script>
@using (Html.BeginForm("Edit", "Course", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Edit was unsuccessful. Please correct errors and try again")
       @Html.HiddenFor(model => model.Course_Id)
    <table style="text-align: left;">
        <tr>
            <th>Course Level
            </th>
            <td>  @Html.DropDownList("Course_Level_Id", String.Empty) 
            @Html.ValidationMessage("CourseLevelError")
            </td>
        </tr>
         <tr>
            <th>Faculty
            </th>
            <td>  @Html.DropDownList("Faculty_Id", String.Empty) 
            @Html.ValidationMessage("FacultyError")
            </td>
        </tr>
         <tr>
            <th>Semester Commencement Date
            </th>
            <td>   @Html.TextBoxFor(model => model.Commence_Date_Sem, new { @readonly = "readonly", @class = "dp" }) 
            @Html.ValidationMessageFor(model => model.Commence_Date_Sem)
            @Html.ValidationMessage("DateError")
            </td>
        </tr>
         <tr>
            <th>Course Name
            </th>
            <td> @Html.EditorFor(model => model.Course_Name) 
            @Html.ValidationMessage("CourseNameError")
            </td>
        </tr>
         <tr>
            <th>Duration
            </th>
            <td>   @Html.EditorFor(model => model.Duration)
            @Html.ValidationMessageFor(model => model.Duration)
            @Html.ValidationMessage("DurationError")
            </td>
        </tr>
         <tr>
            <th>Fee
            </th>
            <td>  @Html.EditorFor(model => model.Fee)
            @Html.ValidationMessageFor(model => model.Fee)
            @Html.ValidationMessage("FeeError")
            </td>
        </tr>
         <tr>
            <th>Description
            </th>
            <td>   @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
            </td>
        </tr>
    </table>
     
        <p>
            <input type="submit" value="Save Changes" class="btn btn-primary" /> 
            <a href="@Url.Action("ViewCourses", "Course", new { id = ViewBag.UniversityId })" class="btn btn-danger">Cancel</a>
        </p> 
}
