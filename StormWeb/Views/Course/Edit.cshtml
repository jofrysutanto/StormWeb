@model StormWeb.Models.Course
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        // For DatePicker
        $(".dp").datepicker({
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            changeYear: true,
            minDate: '0',
            maxDate: '+3M',
            showOn: "button",
            buttonImage: "../../Content/img/calendar_btn.png",
            buttonImageOnly: true
        });
    });
</script>
@using (Html.BeginForm("Edit", "Course", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Edit was unsuccessful. Please correct errors and try again")
    @Html.HiddenFor(model => model.Course_Id)
    <table style="text-align: left;">
        <tr>
            <th>
                University
            </th>
            <td>
                <div class="control-group">
                    <div class="controls">
                        @Html.DropDownListFor(model => model.Faculty.University.University_Id, (IEnumerable<SelectListItem>)ViewBag.Universityddl, "--Select--", new { @class = "chzn-select" })
                        @*  @Html.DropDownList("Faculty_Id", "--Select--") *@
                        @Html.ValidationMessage("FacultyError")
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <th>
                Faculty
            </th>
            <td>
                <div class="control-group">
                    <div class="controls">
                        @Html.DropDownListFor(model => model.Faculty.Faculty_Id, (IEnumerable<SelectListItem>)ViewBag.Faculty_Id, "--Select--", new { @class = "chzn-select" })
                        @*  @Html.DropDownList("Faculty_Id", "--Select--") *@
                        @Html.ValidationMessage("FacultyError")
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <th>
                Course Level
            </th>
            <td>
                <div class="control-group">
                    <div class="controls">
                        @Html.DropDownListFor(model => model.Course_Level.Course_Level_Id, (IEnumerable<SelectListItem>)ViewBag.Course_Level_Id, "--Select--", new { @class = "chzn-select" })
                        @*  @Html.DropDownList("Course_Level_Id", "--Select--") *@
                        @Html.ValidationMessage("CourseLevelError")
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <th>
                Semester Commencement Date
            </th>
            <td>
                <div class="input-append">
                    @Html.TextBoxFor(model => model.Commence_Date_Sem, new { @readonly = "readonly", @class = "dp" })
                    @Html.ValidationMessageFor(model => model.Commence_Date_Sem)
                    @Html.ValidationMessage("DateError")
                </div>
            </td>
        </tr>
        <tr>
            <th>
                Course Name
            </th>
            <td>
                @Html.EditorFor(model => model.Course_Name)
                @Html.ValidationMessage("CourseNameError")
            </td>
        </tr>
        <tr>
            <th>
                Duration
            </th>
            <td>
                @Html.EditorFor(model => model.Duration)
                @Html.ValidationMessageFor(model => model.Duration)
                @Html.ValidationMessage("DurationError")
            </td>
        </tr>
        <tr>
            <th>
                Total Course Fee
            </th>
            <td>@Html.EditorFor(model => model.Fee)
                @Html.ValidationMessageFor(model => model.Fee)
                @Html.ValidationMessage("FeeError")
            </td>
        </tr>
        <tr>
            <th>
                Description
            </th>
            <td>
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </td>
        </tr>
    </table>
     
    <p>
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a href="@Url.Action("ViewCourses", "Course", new { id = ViewBag.UniversityId })" class="btn btn-danger">
            Cancel</a>
    </p> 
}
