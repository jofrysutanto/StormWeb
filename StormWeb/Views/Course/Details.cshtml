            <div class="widget-head">
                <h3>
                    Course Details</h3>
                     <div class="widget-control pull-right">
                    <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-cog"></i>
                        <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#"><i class="icon-plus"></i>Add New</a></li>
                        <li><a href="#"><i class="icon-ok"></i>Bulk Approved</a></li>
                        <li><a href="#"><i class="icon-minus-sign"></i>Bulk Remove</a></li>
                    </ul>
                </div>
            </div>
 <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-boxy table">
                                    <tr>
                                        <td><label class="control-label-bold" for="input01">University Name</label></td>
									    <td>@Html.DisplayFor(model => model.Faculty.University.University_Name, new { Class="input-xlarge"})</td>                                          
                                    </tr> 
                                   <tr>
                                        <td><label class="control-label-bold" for="input01">Course Level</label></td>
									    <td>@Html.DisplayFor(model => model.Course_Level.Course_Level1, new { Class="input-xlarge"})</td>                                          
                                    </tr>                                   										
                                       <tr>
                                       <td><label class="control-label-bold" for="input01">Semester Commencement Date</label></td> 
										@*<td> @Html.DisplayFor(model => model.Commence_Date_Sem, new { Class = "input-xlarge" })</td>*@
                                        <td>@Html.Encode(Model.Commence_Date_Sem.Value.ToString("dd/MM/yyyy"))</td>							
										</tr>
                                        <tr>
                                       <td> <label class="control-label-bold" for="input01">Course Name</label></td>
										<td>@Html.DisplayFor(model => model.Course_Name, new { Class="input-xlarge"})</td>																				 
										</tr>
                                       <tr>
                                       <td> <label class="control-label-bold" for="input01">Duration</label></td>																			
										<td>@Html.DisplayFor(model => model.Duration, new { Class = "input-xlarge" })</td>
										</tr>
                                         <tr>
                                        <td><label class="control-label-bold" for="input01">Fee</label></td>
										<td>@Html.DisplayFor(model => model.Fee, new { Class="input-xlarge"})</td>																					 
										</tr>
                                         <tr>
                                       <td><label class="control-label-bold" for="input01">Url</label></td> 
										 <td><a href="@Model.Faculty.University.University_Url">@Html.DisplayFor(model => model.Faculty.University.University_Url, new { Class = "input-xlarge" })</a></td>						
										</tr> 
                                        <tr>
                                       <td><label class="control-label-bold" for="input01">Description</label></td> 
										<td> @Html.DisplayFor(model => model.Description, new { Class="input-xlarge"})</td>																					
										</tr> 
                                        
                                      </table> 
                                     </div>
                           </div>
	</div></div> </div>

