@model StormWeb.Models.Course
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
 
<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h3>
                    Course Details</h3>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-boxy table">
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                    University Name</label>
                            </td>
                            <td>@Html.DisplayFor(model => model.Faculty.University.University_Name, new { Class = "input-xlarge" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                    Course Level</label>
                            </td>
                            <td>@Html.DisplayFor(model => model.Course_Level.Course_Level1, new { Class = "input-xlarge" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                    Semester Commencement Date</label>
                            </td>
                            @*<td> @Html.DisplayFor(model => model.Commence_Date_Sem, new { Class = "input-xlarge" })</td>*@
                            <td>@Html.Encode(Model.Commence_Date_Sem.Value.ToString("dd/MM/yyyy"))
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                    Course Name</label>
                            </td>
                            <td>@Html.DisplayFor(model => model.Course_Name, new { Class = "input-xlarge" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                    Duration</label>
                            </td>
                            <td>@Html.DisplayFor(model => model.Duration, new { Class = "input-xlarge" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                  Total Course Fee</label>
                            </td>
                            <td>$(AUD)@Html.DisplayFor(model => model.Fee, new { Class = "input-xlarge" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                    Url</label>
                            </td>
                            <td>
                                <a href="@Model.Faculty.University.University_Url">@Html.DisplayFor(model => model.Faculty.University.University_Url, new { Class = "input-xlarge" })</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="control-label-bold" for="input01">
                                    Description</label>
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Description, new { Class = "input-xlarge" })
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
