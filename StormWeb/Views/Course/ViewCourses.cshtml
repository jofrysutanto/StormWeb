@model IEnumerable<StormWeb.Models.Course>
@{
    ViewBag.Title = "ViewCourses";
}
<div class="row-fluid">
    <div class="page-header">
        <h1>
            Course</h1>
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Course list</h5>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-boxy table">
                        @if (Model == null)
                        {
                            <tr>
                                <td>
                                    No Item To Display
                                </td>
                            </tr>
                        }
                        else
                        {    
                            <tr>
                                <th>
                                    Course Level
                                </th>
                                <th>
                                    Course Name
                                </th>
                                <th>
                                    Faculty
                                </th>
                                <th>
                                    Duration
                                </th>
                                <th>
                                    Semester Commencement Date
                                </th>
                                <th>
                                    Fee
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr> 
                            foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course_Level.Course_Level1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Faculty.Faculty_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Duration)
                                    <td>
                                        @if (item.Commence_Date_Sem == null)
                                        {
                                            @Html.Display("_")
                                        }
                                        else
                                        {
                                            @Html.Encode(item.Commence_Date_Sem.Value.ToString("dd/MM/yyyy"))    
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fee)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Course_Id }) | <a class='iframe' href="@Url.Action("Details", new { id = item.Course_Id })" >
                                            Details</a>| @* @Html.ActionLink("Details", "Details", new { id = item.Course_Id }) |*@
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Course_Id })
                                    </td>
                            </tr>
                            }
@*           <p>
    @Html.ActionLink("Create New", "Create")
</p>*@
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    
  @*  @Html.ActionLink("Create New", "Create")*@
        @Html.Button_Add("Create New", "../Create")
</p>
