@model IEnumerable<StormWeb.Models.Course>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
$(function () {
        $('.my-data-tbl-boxy').dataTable({
            "sPaginationType": "full_numbers",
            "iDisplayLength": 10,
            "oLanguage": {
                "sLengthMenu": "<span class='lenghtMenu'> _MENU_</span><span class='lengthLabel'>Entries per page:</span>",
            },
            "sDom": '<"tbl-searchbox clearfix"fl<"search-help"><"clear">>,<"table_content"t>,<"widget-bottom"p<"clear">>'

        });
        $("div.tbl-searchbox select").addClass('tbl_length');



  


        $("[class*='startApp']").click(function(e) {
            e.preventDefault();
            var theHREF = $(this).attr("href");


            $("#dialog").dialog({
                modal: true,
                bgiframe: true,
                width: 500,
                height: 200,
                autoOpen: false,
                buttons: {
                    "Confirm" : function() {
                        window.location.href = theHREF;
                        },
                    "Cancel" : function() {
                        $(this).dialog("close");
                        },
                },
                open: function() {
                        $('.ui-dialog-buttonpane').find('button:contains("Cancel")').addClass('btn');      
                        $('.ui-dialog-buttonpane').find('button:contains("Confirm")').addClass('btn btn-primary');                     
                    }                
          });

          $("#dialog").dialog("open");

        });

    });
</script>
<div id="dialog" title="Confirm start application" style="display:none">
    Start this application?
</div>
<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Course list</h5>
                <div class="widget-control pull-right">
                    <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-cog"></i>
                        <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#"><i class="icon-plus"></i>Add New</a></li>
                        <li><a href="#"><i class="icon-ok"></i>Bulk Approved</a></li>
                        <li><a href="#"><i class="icon-minus-sign"></i>Bulk Remove</a></li>
                    </ul>
                </div>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="my-data-tbl-boxy table">
                       <thead>
                       <tr>
                        <th>
                            University Name
                        </th>
                        <th>
                            Course Level 
                        </th>
                        <th>
                            Course Name
                        </th>  
                        <th>
                            Semester Commencement Date
                        </th>
                        <th>
                            Duration
                        </th>
                        <th>
                            Fee
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
			        </thead>
			        <tbody>
			        @foreach (var item in Model)
                    {                                                                
                        <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Faculty.University.University_Name)
                            
                            <ul>  
                            <li class="post-date">                          
                            Country: @Html.DisplayFor(modelItem => item.Faculty.University.Country.Country_Name)
                            </li>
                            </ul>                       
                            
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course_Level.Course_Level1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course_Name)
                        </td>
                        <td>                                
                                     
                            @if (item.Commence_Date_Sem == null)
                            {
                                @Html.Display("_")
                            }
                            else
                            {
                                @Html.Encode(item.Commence_Date_Sem.Value.ToString("dd/MM/yyyy"))    
                            }   
                        </td>        
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration)
                        </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Fee)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>       
                        <td>
                            @{
                                
                                // Get the student id to which the course is applied for
                        if (ViewBag.CountApplication < 3)
                        {
                            int sid = -1;
                            if (StormWeb.Helper.CookieHelper.isStaff())
                            {
                                sid = ViewBag.studentIdC;
                            }
                            else if (StormWeb.Helper.CookieHelper.isStudent())
                            {
                                sid = StormWeb.Helper.CookieHelper.getStudentId();
                            }
                                <a href="@Url.Action("Add", "Application", new { id = item.Course_Id, sid = sid })" class='startApp btn btn-info'  title="Start Application">Start Application</a>
                        }
                        else
                        {
                            <a href="#" class='btn btn-info btn disabled'  title="No new application allowed">Start Application</a>
                        }
                            }
                        </td>
                        </tr>
                                  
                    }														
			        </tbody>
			   </table>
		</div>
	</div>
   </div> 
   </div>
   </div>        

        


