@model StormWeb.Models.Material_Order

@{
    ViewBag.Title = "DeleteOrder";
}

<div class="row-fluid">
    <div class="span12">
        <div class="box-tab">
            <div class="page-header">
            <h1> &nbsp;&nbsp;Delete Order </h1>
            </div>
            <div class="widget-content">
                <div class="widget-box" style="padding: 15px;">

<h3>Are you sure you want to delete this?</h3>

 @using (Html.BeginForm())
 {
    <table class="data-tbl-simple table table-bordered dataTable ">
   <tr><th><div class="display-label">Name</div></th>
    <td><div class="display-field">
        @Html.DisplayFor(model => model.Material.Name)
    </div></td></tr> 

    <tr><th><div class="display-label">Quantity</div></th>
    <td><div class="display-field">
        @Html.DisplayFor(model => model.Quantity)
    </div></td></tr>

    <tr><th><div class="display-label">Requested By</div></th>
    <td><div class="display-field">
        @Html.DisplayFor(model => model.RequestedBy)
    </div></td></tr>

    <tr><th><div class="display-label">Requested On</div></th>
    <td><div class="display-field">
        @Html.DisplayFor(model => model.RequestedOn)
    </div></td></tr>

    <tr><th><div class="display-label">Status</div></th>
    <td><div class="display-field">
        @Html.DisplayFor(model => model.Status)
    </div></td></tr>

    <tr><th><div class="display-label">Branch</div></th>
    <td><div class="display-field">
        @Html.DisplayFor(model => model.Branch)
    </div></td></tr>
</table>
