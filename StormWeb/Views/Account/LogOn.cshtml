@model StormWeb.Models.LogOnModel
@{
    Layout = "";
    ViewBag.Title = "Log On";
}
<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Storm Web - Log In</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Admin Panel Template" />
    <meta name="author" content="Westilian: Kamrujaman Shohel" />
    <!-- styles -->
    <link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/bootstrap-responsive.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/jquery-ui-1.8.16.custom.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/jquery.jqplot.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/prettify.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/elfinder.min.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/elfinder.theme.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/fullcalendar.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Scripts/plupupload/jquery.plupload.queue/css/jquery.plupload.queue.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/styles.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/my_custom.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Content/css/icons-sprite.css")" rel="stylesheet"/>
    <link id="themes" href="@Url.Content("~/Content/css/themes.css")" rel="stylesheet"/>
    
    <link href="@Url.Content("~/Content/css/jquery.pnotify.default.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Content/css/jquery.pnotify.default.icons.css")"
        rel="stylesheet" type="text/css" />
    <!--[if IE 7]>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/ie/ie7.css")" />
<![endif]-->
    <!--[if IE 8]>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/ie/ie8.css")" />
<![endif]-->
    <!--[if IE 9]>
<link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/ie/ie9.css")" />
<![endif]-->
    <!--fav and touch icons -->
    <link rel="shortcut icon" href="@Url.Content("~/Content/ico/favicon.ico")" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@Url.Content("~/Content/ico/apple-touch-icon-144-precomposed.png")" />
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("~/Content/ico/apple-touch-icon-114-precomposed.png")" />
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@Url.Content("~/Content/ico/apple-touch-icon-72-precomposed.png")" />
    <link rel="apple-touch-icon-precomposed" href="@Url.Content("~/Content/ico/apple-touch-icon-57-precomposed.png")" />
    @{ Html.EnableClientValidation(); }
</head>


<body class="map_bg">
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <div class="branding">
                    <div class="logo">
                        <a href="#">
                            <h5>
                                <img src="@Url.Content("~/Content/img/logo.png")" /></h5>
                        </a>
                    </div>
                </div>
                <ul class="nav pull-right">
                    <li><a href="@Url.Action("Page","Site")"><i class="icon-share-alt icon-white"></i>Go to Main Site</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End of Header -->
    <!-- Main container -->
    <div class="container">
        <div class="row" id="error404">
            <!--404 with error message show area start here-->
            <div class="span8">
                <div class="leftSide">
                    <div class="errorCode" style="font-size: 60px">
                        <div class="welcome-box">
                        <div class="well-login">
                            <div class="logon-title" style="text-align: center">
                            <img src="@Url.Content("~/Content/img/logo.png")" />
                            </div>
                            <h3>
                                <span>Welcome!</span>
                                <h5>
                                    <ul>
                                        <li>More than 50 branches all over the world</li>
                                        <li>Represents more than 100 Universities and <strong>still growing!</strong></li>
                                        <li>Over 10 years experience</li>
                                    </ul>
                                </h5>
                            </h3>
                            <h4 style="text-align: right">
                                Have a question? Want to talk with one of our personnel?</h4>
                            <h5 style="text-align: right">
                                <a class="btn btn-info" href="@Url.Action("ChooseRegistration", "Client")">Register/Enquire Now &raquo;</a>
                                <h5>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--404 with error message show area end here-->
            <!--Right side sugestions area start here-->
            <div class="span4">
                <div class="rightSide">
                    <div class="login-container">
                        @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { id="FormLogin" }))
                        {	
                            <div class="well-login">
                                <div>
                                    <h2>
                                        Sign-In
                                    </h2>
                                    <br />
                                </div>
                                
                                @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-error fade in" })
                                @Html.ValidationMessage("NoBranch")
                                <div class="control-group">
                                    <div class="controls">
                                        <div>
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "login-input user-name" })
                                            @Html.ValidationMessageFor(m => m.UserName)
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls">
                                        <div>
                                            @Html.PasswordFor(m => m.Password, new { @class = "login-input user-pass" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                <div class="controls">
                                <div class="remember-me">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "rem-me" }) Remember Me
                                </div>
                                </div>
                                </div>
                                <div class="clearfix">
                                    <button class="btn btn-primary login-btn" type="submit" id="loginBtn">
                                        Login</button>
                                    <div> <a class="pull-right" href="@Url.Action("ForgotPassword")">Forgot your password? &raquo;</a> </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!--Right side sugestions end start here-->
        </div>
    </div>
    <!-- End of Main container -->
    <!-- javascript
================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/jquery.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.touch-punch.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/prettify.js")"></script>    
    <script src="@Url.Content("~/Scripts/jquery.pnotify.min.js")" type="text/javascript"></script>
    <!-- html5.js for IE less than 9 -->
    <!--[if lt IE 9]>
	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->
    <!-- css3-mediaqueries.js for IE less than 9 -->
    <!--[if lt IE 9]>
	<script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
<![endif]-->
    <script src="@Url.Content("~/Scripts/ios-orientationchange-fix.js")"></script>

    
<script type="text/javascript">
@{

@:$(function() {
if (ViewBag.NotifyRegistrationSuccess != null)
{

                @:$.pnotify({
                    @: title: 'Registration successful',
                     @:text: 'You can now login with your account',
                     @:type: 'success',
                     @:history: false
                 @:});
}

if (ViewBag.NotifyPasswordReset != null)
{
            @:$.pnotify({
                    @: title: 'Password reset',
                     @:text: 'You can now use your new password',
                     @:type: 'success',
                     @:history: false
                 @:});

}

if (ViewBag.NotifyLogOff != null)
{
                @:$.pnotify({
                    @: title: 'Logged Out',
                     @:text: 'See you again next time',
                     @:type: 'info',
                     @:history: false
                 @:});

}

if (ViewBag.NotifyBadLink != null)
{
                @:$.pnotify({
                    @: title: 'Error',
                     @:text: 'You clicked on a bad link!',
                     @:type: 'error',
                     @:history: false
                 @:});

}

@:});
}


$(function() {
    $("#loginBtn").click(function () {
        $(this).attr("disabled", "disabled");
        $(this).html("Please wait..");
        $("#FormLogin").submit();
    });
});
</script>
</body>
</html>
