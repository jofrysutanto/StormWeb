@model StormWeb.Models.Resume
@{
    ViewBag.Title = "Delete";
}
<h3>
    Are you sure you want to delete this?</h3>
<br />
@Html.ValidationSummary(false, "", new { @class = "error" })
<div class="row-fluid">
    <div class="span12">
        <div class="box-tab">
            <div class="page-header">
                <h1>
                    &nbsp;&nbsp;Resume Details
                </h1>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <br />
                    <table class="table">
                        <tr>
                            <th>
                                GivenName
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.GivenName)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                LastName
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.LastName)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Address
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Address_Id)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                ContactNumber
                            </th>
                            <td>@Html.DisplayFor(model => model.ContactNumber)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                SecondaryContactNumber
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.SecondaryContactNumber)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Email
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Description
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Description)
                            </td>
                        </tr>
                        <tr>
                            <th>
                            </th>
                            <td>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    <input type="submit" value="Delete" class="btn btn-danger  tip-top" data-toggle="modal"
        href="#myModal1" data-original-title="Delete Branch Details" />
    @Html.Button_BackToList("Bact To List", "../../Resume")
</p>
@using (Html.BeginForm("Delete", "Resume", FormMethod.Post))
{   
    <div class="modal hide fade" id="myModal1" style="width: 250px">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                ×</button>
            <h3>
                Delete Resume Details</h3>
        </div>
        <div class="modal-body">
            <p>
                Are you sure you want to delete this ?
            </p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal" id="dismissModal">No</a>
            <input type="submit" class="btn btn-modal" id="save" type="submit" value="Yes" />
        </div>
    </div>
}
