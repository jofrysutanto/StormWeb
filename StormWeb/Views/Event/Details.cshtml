@model StormWeb.Models.EventAppointment

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset class = "form-horizontal span6">
    <legend>Event</legend>
    
    <div class="display-label">Appointment with</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.client.GivenName)
    </div>
   
    <div class="display-label">Venue</div>
    <div class="display-field">
        @Html.TextAreaFor(model => model.add)
    </div>

    <div class="display-label">DateTime</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.appointment.AppDateTime)
    </div>

    <div class="display-label">Comments</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.appointment.Comments)
    </div>

</fieldset>
