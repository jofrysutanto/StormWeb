@model StormWeb.Models.University
@{
    ViewBag.Title = "Delete";
}
<h3>
    Are you sure you want to delete this?</h3>
<br />
<div class="row-fluid">
    <div class="span12">
        <div class="box-tab">
            <div class="page-header">
                <h1>
                    &nbsp;&nbsp;University Details</h1>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-boxy table">
                        <tr>
                            <th>
                                Country
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Country.Country_Name)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                University
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.University_Name)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Campus
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Campus)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Email
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Description
                            </th>
                            <td>
                                @Html.DisplayFor(model => model.Description)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" class="btn btn-danger" />
        @*  @Html.Button_Delete("Delete", @Url.Action("Delete", "University", new { id = Model.University_Id }))*@
        @Html.Button_BackToList("Back to List", "../../University")
    </p>        
}
<div class="raw">@Html.ValidationSummary(true)</div>
