@model StormWeb.Models.University
@{
    ViewBag.Title = "Delete";
}
@*<h2>Delete</h2>*@
<div class="row-fluid">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h3>
                    Are you sure you want to delete this?</h3>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-boxy table">
                        <tr>
                            <td>
                                Country
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Country.Country_Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                University
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.University_Name)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Campus
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Campus)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Email
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Description
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Description)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" class="btn btn-danger"/>
        @*  @Html.Button_Delete("Delete", @Url.Action("Delete", "University", new { id = Model.University_Id }))*@
        @Html.Button_BackToList("Back to List", "../../University/Index")
    </p>        
}
<div class="raw">@Html.ValidationSummary(true)</div>
