@model StormWeb.Models.Faculty

@{
    ViewBag.Title = "CreateFaculty";
}

@using StormWeb.Helper

<h2>CreateFaculty</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("CreateFaculty", "University", FormMethod.Post, new { @class = "form-horizontal well", id = "appointmentForm" }))
{
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Faculty</legend>
       @Html.HiddenFor(model => model.University_Id)
       
        <div class="editor-label">
            @Html.Label("Faculty Name")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Faculty_Name)
            @Html.ValidationMessageFor(model => model.Faculty_Name)
        </div>

        <div class="editor-label">
            @Html.Label("Faculty Description")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Faculty_Description)
            @Html.ValidationMessageFor(model => model.Faculty_Description)
        </div>

        <div class="editor-label">
            @Html.Label("Campus")
        </div>
        @{
            string u = "";
            string c = "";
            int i = 0;
            var item = (StormWeb.Models.University)ViewBag.UniId;
            u = item.University_Name;
            c = item.Campus;
            i = item.University_Id;
        <div class="editor-field">             
            @Html.TextBox("Campus",@c,new{@readonly="readonly"})
            @Html.ValidationMessageFor(model => model.University.Campus)
        </div>

        <div class="editor-label">
            @Html.Label("University")
        </div>
        <div class="editor-field">
            
            @Html.TextBox("University_Name", @u, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.University.University_Name)
        </div> 

        @Html.HiddenFor(model => model.University_Id);
       }
        <p>
            <input type="submit" value="Create" />
        </p
            
    </fieldset>
             
}

<script>
    $(function () {
        
        $('#University_Id').val(@{
            StormWeb.Models.University Uni = (StormWeb.Models.University)ViewBag.UniId;
            @:@Uni.University_Id
        });
    });

</script>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
