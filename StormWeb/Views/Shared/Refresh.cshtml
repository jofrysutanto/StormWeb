@model StormWeb.Models.RefreshModel

@{
    ViewBag.Title = "Refresh";
    Layout = "";
}

<script src="@Url.Content("~/Scripts/jquery.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.colorbox-min.js")"></script>
<script>
    $(function () {
        parent.$.colorbox.resize(100, 100);
        @if (Model == null)
        {
            <text>parent.location.reload();</text>
        }
        else
        {
            <text>parent.location = @(Model.url);</text>
        }
    });
</script>
