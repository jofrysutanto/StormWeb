@model StormWeb.Models.StudentCentreModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<h2>
    Edit Study Service Details</h2>
<br />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("EditStudyServiceDetails", "StudentCentre", FormMethod.Post))
{
 @Html.ValidationSummary(false, null, new { @class = "error" })
foreach (var item in Model.clientStudyServiceDetails)
{ 
    <div id="divEditProfile">
        <table style="text-align: left;">
            @Html.HiddenFor(modelItem => item.Client_Id)
            <tr>
                <th>
                    Preferred Course Detail
                </th>
                <td>
                    @Html.EditorFor(modelItem => item.PreferredCourseDetail, null, "preferredCourseDetail") 
                </td>
            </tr>
            <tr>
                <th>
                    Applied To Other University
                </th>
                <td>
                    <div class="control-group">
                        <div class="controls">
                            <label class="radio">
                                @Html.RadioButtonFor(model => item.AppliedToOtherUniversity, true, new { id = "appliedToOtherUniversity_True", @class = "radio-b" })
                                Yes</label>
                            <label class="radio">
                                @Html.RadioButtonFor(model => item.AppliedToOtherUniversity, false, new { id = "appliedToOtherUniversity_False", @class = "radio-b" })
                                No</label>
                            <p class="help-block">
                                @Html.ValidationMessageFor(model => item.AppliedToOtherUniversity)
                            </p>
                        </div>
                    </div> 
                </td>
            </tr>
            <tr>
                <th>
                    Applied To Other University Name
                </th>
                <td>
                    @Html.EditorFor(modelItem => item.AppliedToOtherUniversityName, null, "appliedToOtherUniversityName") 
                </td>
            </tr>
            <tr>
                <th>
                    Previous Consultant
                </th>
                <td>
                    @Html.EditorFor(modelItem => item.PreviousConsultant, null, "previousConsultant") 
                </td>
            </tr>
            <tr>
                <th>
                    Relative At Preferred Country
                </th>
                <td>
                    <div class="control-group">
                        <div class="controls">
                            <label class="radio">@Html.RadioButtonFor(model => item.RelativeAtPreferredCountry, true, new { id = "RelativeAtPreferredCountry_True", @class = "radio-b" })Yes</label> 
                            <label class="radio">@Html.RadioButtonFor(model => item.RelativeAtPreferredCountry, false, new { id = "RelativeAtPreferredCountry_False", @class = "radio-b" })No</label>
                           
                        </div>
                    </div> 
                </td>
            </tr>
            <tr>
                <th>
                    Relative At Preferred Country Location
                </th>
                <td>
                    @Html.EditorFor(modelItem => item.RelativeAtPreferredCountryLocation, null, "relativeAtPreferredCountryLocation") 
                </td>
            </tr>
            <tr>
                <th>
                    Relative At Preferred County Status
                </th>
                <td>
                    @Html.EditorFor(modelItem => item.RelativeAtPreferredCountyStatus, null, "relativeAtPreferredCountyStatus") 
                </td>
            </tr>
            <tr>
                <th>
                    Hear About Us
                </th>
                <td>
                    @Html.EditorFor(modelItem => item.HearAboutUs, null, "hearAboutUs")
                    @Html.ValidationMessageFor(modelItem => item.HearAboutUs)
                </td>
            </tr>
            <tr>
                <th>
                    Hear About Us Other
                </th>
                <td>
                    @Html.EditorFor(modelItem => item.HearAboutUsOther, null, "hearAboutUsOther") 
                </td>
            </tr>
        </table>
        <div class="modal-footer">
            <input type="submit" class="btn btn-primary" value="Save Changes" />
            <input type="button" id="closeModal" class="btn btn-danger cancelButton" value="Cancel" />
        </div>
    </div>
}
}
<script type="text/javascript">
    $(function(){
    @{
        if (ViewBag.successEdit != null)
        {
        @:parent.location='/StudentCentre/Profile/@(Model.caseTable.First().Student_Id)?message=edit';
        @:parent.$.fn.colorbox.close();
        };
    }
     });
      
    $(function () {
        $(".cancelButton").click(function () {            
            parent.$.fn.colorbox.close();
        });
    });
     
</script>