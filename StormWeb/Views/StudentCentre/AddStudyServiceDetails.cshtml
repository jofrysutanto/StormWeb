@model StormWeb.Models.Client_StudyServiceDetails
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<h2>
    Edit Study Service Details</h2>
<br />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("AddStudyServiceDetails", "StudentCentre", FormMethod.Post))
{
 @Html.ValidationSummary(false, null, new { @class = "error" })
 
    <div id="divEditProfile">
        <table style="text-align: left;">
            
            <tr>
                <th>
                    Preferred Course Detail
                </th>
                <td>
                    @Html.TextBoxFor(model => model.PreferredCourseDetail) 
                </td>
            </tr>
            <tr>
                <th>
                    Applied To Other University
                </th>
                <td>
                    <div class="control-group">
                        <div class="controls">
                            <label class="radio">
                                @Html.RadioButtonFor(model => model.AppliedToOtherUniversity, true, new { id = "appliedToOtherUniversity_True", @class = "radio-b" })
                                Yes</label>
                            <label class="radio">
                                @Html.RadioButtonFor(model => model.AppliedToOtherUniversity, false, new { id = "appliedToOtherUniversity_False", @class = "radio-b" })
                                No</label>
                            <p class="help-block">
                                @Html.ValidationMessageFor(model => model.AppliedToOtherUniversity)
                            </p>
                        </div>
                    </div> 
                </td>
            </tr>
            <tr>
                <th>
                    Applied To Other University Name
                </th>
                <td>
                    @Html.TextBoxFor(model => model.AppliedToOtherUniversityName) 
                </td>
            </tr>
            <tr>
                <th>
                    Previous Consultant
                </th>
                <td>
                    @Html.TextBoxFor(model => model.PreviousConsultant) 
                </td>
            </tr>
            <tr>
                <th>
                    Relative At Preferred Country
                </th>
                <td>
                    <div class="control-group">
                        <div class="controls">
                            <label class="radio">@Html.RadioButtonFor(model => model.RelativeAtPreferredCountry, true, new { id = "RelativeAtPreferredCountry_True", @class = "radio-b" })Yes</label> 
                            <label class="radio">@Html.RadioButtonFor(model => model.RelativeAtPreferredCountry, false, new { id = "RelativeAtPreferredCountry_False", @class = "radio-b" })No</label>
                           
                        </div>
                    </div> 
                </td>
            </tr>
            <tr>
                <th>
                    Relative At Preferred Country Location
                </th>
                <td>
                    @Html.TextBoxFor(model => model.RelativeAtPreferredCountryLocation) 
                </td>
            </tr>
            <tr>
                <th>
                    Relative At Preferred County Status
                </th>
                <td>
                    @Html.EditorFor(model => model.RelativeAtPreferredCountyStatus) 
                </td>
            </tr>
            <tr>
                <th>
                    Hear About Us
                </th>
                <td>
                    @Html.TextBoxFor(model => model.HearAboutUs)
                    @Html.ValidationMessageFor(model => model.HearAboutUs)
                </td>
            </tr>
            <tr>
                <th>
                    Hear About Us Other
                </th>
                <td>
                    @Html.TextBoxFor(model => model.HearAboutUsOther) 
                </td>
            </tr>
        </table>
        <div class="modal-footer">
            <input type="submit" class="btn btn-primary" value="Save Changes" />
            <input type="button" id="closeModal" class="btn btn-danger cancelButton" value="Cancel" />
        </div>
    </div>
} 
<script type="text/javascript">
    $(function(){
    @{
        if (ViewBag.successEdit != null)
        {
      //  @:parent.location='/StudentCentre/Profile/@(Model.caseTable.First().Student_Id)?message=edit';
        @:parent.$.fn.colorbox.close();
        };
    }
     });
      
    $(function () {
        $(".cancelButton").click(function () {            
            parent.$.fn.colorbox.close();
        });
    });
     
</script>