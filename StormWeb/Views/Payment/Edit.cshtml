@model StormWeb.Models.Payment

@{
    
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Modify Payment</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Application_Id)
        <h4 style="color:blue;margin-left:20px;">
            Student Name:@Model.Application.Student.Client.GivenName @Model.Application.Student.Client.LastName
            <br/>
            Course Name :@Model.Application.Course.Course_Name
        </h4>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Amount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Currency)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Currency)
            @Html.ValidationMessageFor(model => model.Currency)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Receipt_No)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Receipt_No)
            @Html.ValidationMessageFor(model => model.Receipt_No)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Payment_Method)
        </div>
         @Html.DropDownListFor(model => model.Payment_Method, (IEnumerable<SelectListItem>)ViewBag.PaymentMethod)
@*        <div class="editor-field">
            @Html.EditorFor(model => model.Payment_Method)
            @Html.ValidationMessageFor(model => model.Payment_Method)
        </div>
*@
        <div class="editor-label">
            @Html.LabelFor(model => model.Date_Of_Payment)
        </div>
        <div class="editor-field">
           @Html.TextBoxFor(model => model.Date_Of_Payment, new { @class = "chooseDate1", @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.Date_Of_Payment)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<script type="text/javascript">

    $(document).ready(function () {
        $(".chooseDate1").datepicker({
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            changeYear: true,
            minDate: '-100Y',
            maxDate: '+10Y'
        });
    });

</script>
